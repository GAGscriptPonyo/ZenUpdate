<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Grow a Garden Pet Size Visualizer</title>
  <style>
    body { font-family: Arial, sans-serif; text-align: center; padding: 40px; background: #e8ffe8; }
    .pet-img { width: 150px; transition: transform 0.3s ease; }
    .output { margin-top: 20px; font-size: 1.2em; }
    input, button { padding: 10px; font-size: 1em; }
    button { cursor: pointer; margin-left: 10px; }
  </style>
</head>
<body>
  <h1>Grow a Garden Pet Size Visualizer</h1>

  <div id="pet-container">
    <h2 id="pet-name">Your Pet</h2>
    <img id="pet-img" class="pet-img" src="" alt="Pet Image">
  </div>

  <div style="margin-top: 20px;">
    <label>Enter Weight (kg):</label>
    <input type="number" id="weight-input" step="0.01" min="0">
    <button onclick="checkPetSize()">Check Size</button>
  </div>

  <div class="output" id="result-text"></div>

  <script>
    const pets = [
      { name: "Cat", image: "https://i.imgur.com/v0XQXON.png", msg: w => w<5?"Tiny cat!":"Big cat!", scale:40 },
      { name: "Dog", image: "https://i.imgur.com/M9vVshk.png", msg: w => w<10?"Puppy size!":"Huge dog!", scale:5 },
      { name: "Hedgehog", image: "https://i.imgur.com/NDv6vJc.png", msg: w=>w<1?"Small hedgehog":"Prickly giant!", scale:100 },
      { name: "Owl", image: "https://i.imgur.com/7uHvfIv.png", msg: w=>w<3?"Tiny owl":"Wise big owl!", scale:20 },
      { name: "Kitsune", image: "https://i.imgur.com/3kJbdeM.png", msg: w=>w<2?"Mystic fox pup!":"Legendary fox!", scale:80 },
      { name: "Raccoon", image: "https://i.imgur.com/9dBLGks.png", msg: w=>w<4?"Sneaky little raccoon":"Masked bandit!", scale:30 }
    ];

    const selected = pets[Math.floor(Math.random() * pets.length)];
    document.getElementById("pet-name").textContent = `Your Pet: ${selected.name}`;
    document.getElementById("pet-img").src = selected.image;

    function checkPetSize() {
      const w = parseFloat(document.getElementById("weight-input").value);
      if (isNaN(w) || w <= 0) {
        document.getElementById("result-text").textContent = "Please enter a valid weight!";
        return;
      }
      document.getElementById("pet-img").style.transform = `scale(${(selected.scale * w)/150})`;
      document.getElementById("result-text").textContent = selected.msg(w);
    }
  </script>
</body>
</html>
